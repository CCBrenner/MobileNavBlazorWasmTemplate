@inherits LayoutComponentBase

<div class="page">

    <!-- This element covers all contents in the viewport if the viewport -->
    <div class="larger-than-mobile">
        <div class="ltm-section">
            <h2>Sorry, your screen is too wide!</h2>
            <br />This web app was designed to be mobile only, so we can't let you see
            <br />what is behind the curtain at this viewport width . . .
            <br />
            <br />. . . but if you're still interested in checking out what IS here,
            <br />just scan this QR code with a mobile device! 
        </div>
        <br />
        <br />
        <div class="ltm-section">
            <img src="media/images/frame.png" class="larger-than-mobile-image"/>
        </div>
    </div>

    <div class="install-promo" style="display: @DisplayInstallPromo" @onclick="OnTapInstallPromo">
        <i class="fa-solid fa-download"></i>
    </div>
    <div class="install-prompt-background" style="display: @DisplayInstallPrompt" @onclick="OnTapCloseInstallPrompt"></div>
    <div class="install-prompt" style="display: @DisplayInstallPrompt">
        <div class="install-prompt-message">Install this app?</div>
        <div>
            <button class="btn btn-primary install-prompt-button" @onclick="OnTapInstallPrompt">Install</button>
            <button class="btn btn-danger install-prompt-button" @onclick="OnTapCloseInstallPrompt">Close</button>
        </div>
    </div>

    <div class="sidebar">
        <BTNavMenu />
    </div>

    <main>
        <div class="container-fluid header">
            <a class="navbar-brand" href="">MobileNav Template</a>
        </div>
        <div class="top-row fixed-top px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
